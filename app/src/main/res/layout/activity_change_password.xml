<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"

    tools:context=".ChangePasswordActivity">
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_keyboard_backspace_24" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Change Pasword"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="Enter Your New Password and Confirm it."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
    <LinearLayout
        android:id="@+id/newpasswordlayout"
        android:layout_width="337dp"
        android:layout_height="70dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/round_back_border_1_dark_blue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        app:layout_constraintBottom_toTopOf="@+id/changepassbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/x"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/newpasswordtxt"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_transparent"

            android:ems="10"

            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="10dp"

            android:paddingEnd="10dp"
            android:shadowColor="#0000FF"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="20"
            android:textColor="@color/white"
            android:textColorHint="@color/light_blue"
            android:textColorLink="@color/white"
            android:textSize="21sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordlayout"
        android:layout_width="337dp"
        android:layout_height="70dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/round_back_border_1_dark_blue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        app:layout_constraintBottom_toTopOf="@+id/changepassbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/x"
            app:srcCompat="@drawable/password" />

        <EditText
            android:id="@+id/oldPasswordtxt"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_transparent"

            android:ems="10"

            android:hint="@string/old_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="10dp"

            android:paddingEnd="10dp"
            android:shadowColor="#0000FF"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="20"
            android:textColor="@color/white"
            android:textColorHint="@color/light_blue"
            android:textColorLink="@color/white"
            android:textSize="21sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cpasswordlayout"
        android:layout_width="337dp"
        android:layout_height="70dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/round_back_border_1_dark_blue"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        app:layout_constraintBottom_toTopOf="@+id/changepassbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/confirm_password"
            app:srcCompat="@drawable/baseline_lock_24" />

        <EditText
            android:id="@+id/cpasswordtxt"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_transparent"

            android:ems="10"

            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="10dp"

            android:paddingEnd="10dp"
            android:shadowColor="#0000FF"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="20"
            android:textColor="@color/white"
            android:textColorHint="@color/light_blue"
            android:textColorLink="@color/white"
            android:textSize="21sp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/changepassbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changepassbtn"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/round_back_blue1000"
        android:elevation="8dp"
        android:letterSpacing="0.2"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"

        android:text="@string/change_password"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.489"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.27" />

</androidx.constraintlayout.widget.ConstraintLayout>