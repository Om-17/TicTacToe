<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinRoomDialog">

    <LinearLayout
        android:background="@color/ex_dark_blue"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:background="@color/ex_dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/join_room" />
            <ImageView
                android:id="@+id/closebtn"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/baseline_close_24" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:shadowColor="#0000FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:background="@color/white"/>

        <LinearLayout
        android:background="@color/ex_dark_blue"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                >



                <EditText
                    android:id="@+id/editTextRoomCode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:hint="@string/enter_room_code"
                    android:shadowColor="#0000FF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/white"
                    android:autofillHints=""
                    android:background="@android:color/transparent"
                    android:paddingBottom="2dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:shadowColor="#0000FF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:background="@color/lightBlue"/>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJoinRoom"
            android:textSize="20sp"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:letterSpacing="0.2"

                android:shadowRadius="20"
            android:layout_width="match_parent"
                android:background="@drawable/round_back_blue1000"
                android:textColor="@color/white"

            android:layout_height="wrap_content"
            android:text="@string/join_room" />

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>