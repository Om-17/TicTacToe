<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow with light blue color -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F9FAFF" /> <!-- Light blue color for the outer glow -->

        </shape>

    </item>
    <!-- Inner glow with a lighter shade of blue -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1F51FF" /> <!-- Lighter blue color for the inner glow -->
            <stroke
                android:width="8dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
